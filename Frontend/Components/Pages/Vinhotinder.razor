@page "/vinhotinder"
@using Frontend.Helpers
@attribute [StreamRendering]
@inject ApiHelper ApiHelper

<PageTitle>Vinho tinder</PageTitle>

<h1>Vinho tinder based</h1>

<p>Esta pagina é dedica ao gosto de vinhos.</p>

<div class="card-container">
    @if (_vinhos == null)
    {
    <p>
        <em>Carregando...</em>
    </p>
    }
    else
    {
    @foreach (var vinho in _vinhos)
    {
    <div class="card">
        <div class="card-header">
            <h3>@vinho.Name</h3>
        </div>
        <div class="card-body">
            <p>Tipo: @vinho.Tipo</p>
        </div>
        <div class="card-footer">
            <button class="btn btn-danger" @onclick="() => DislikeVinho(vinho)">Não gostei</button>
            <button class="btn btn-primary" @onclick="() => LikeVinho(vinho)">Gostei</button>
            <button class="btn btn-success" @onclick="() => LoveVinho(vinho)">Gostei muito</button>
        </div>
    </div>
    }
    }
</div>

